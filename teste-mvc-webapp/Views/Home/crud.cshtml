@model teste_mvc_webapp.Models.crud
@{
    ViewData["Title"]="Nova Pessoa";
}

<h1 class="alert alert-secundary">Nova Pessoa</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="texte-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="texte-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control"/>
                <span asp-validation-for="Senha" class="texte-danger"></span>
            </div>
            <div>
                <input type="submit" value="Salvar" class="btn btn-outline-success btn-sm"/> &emsp;
                <a asp-action="Index" class="btn btn-link btn-sm">Voltar</a>
            </div>
        </form>
    </div>
</div>